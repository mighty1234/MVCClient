@model DTOLibrary.OrdersDto

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Create Order </h4>
    <hr />
    <div class="col-md-10">
        @Html.DropDownListFor(Model => Model.Brunch_id, new SelectList(ViewBag.Brunches, "Id", "Name"))
    </div>
    <div class="col-md-10">
        @Html.DropDownListFor(Model => Model.Staff_id, new SelectList(ViewBag.Staff, "Id", "Name"))
    </div>
    <div class="col-md-10">
        @Html.DropDownListFor(Model => Model.Gift_id, new SelectList(ViewBag.Gifts, "Id", "Name"))
    </div>
    <div class="col-md-10">
        @Html.DropDownListFor(Model => Model.Client_id, new SelectList(ViewBag.Clients, "Id", "Name"))
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
